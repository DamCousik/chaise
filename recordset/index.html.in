<!DOCTYPE html>
<html lang="en" id="recordsetApp" ng-app="recordsetApp">
    <head>
        <meta charset="UTF-8">
        <title>Record Set App</title>
        %ASSETS%
    </head>
    <body>
        <h2>Search context</h2>
        <div ng-controller="contextController">
            <p><b>Service URL:</b> {{context.serviceURL}}</p>
            <p><b>Catalog ID:</b> {{context.catalogID}}</p>
            <p><b>Schema name:</b> {{context.schemaName}}</p>
            <p><b>Table name:</b> {{context.tableName}}</p>
        </div>
        <h2>Records</h2>
        <div ng-controller="recordsetController">
            <table border="1">
                <tr ng-repeat="row in rowset">
                    <td ng-repeat="value in row">{{value}}</td>
                </tr>
            </table>
        </div>
    </body>
</html>
