<!DOCTYPE html>
<html lang="en" id="recordsetApp" ng-app="recordsetApp">
    <head>
        <meta charset="UTF-8">
        <title>Record Set App</title>
        %ASSETS%
    </head>
    <body>
        <div class="container">
            <h2>Records</h2>
            <div ng-controller="recordsetController">
                <table class="table-striped table-bordered">
                    <thead>
                        <tr>
                            <th ng-repeat="name in vm.header">{{name}}</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="row in vm.rowset">
                        <td ng-repeat="name in vm.header">{{row[name]}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </body>
</html>
