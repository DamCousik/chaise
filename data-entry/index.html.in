<body>
    <div class="container-fluid">
        <div ng-controller="FormController as form" class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th ng-repeat="column in form.editorModel.columns">
                                {{column.name | underscoreToSpace | toTitleCase}} &bull; <small>{{column.type.name}}</small>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td ng-repeat="column in form.editorModel.columns" ng-switch="form.setInputType(column);">
                                <datepicker ng-switch-when="date" ng-model="form.editorModel.rows[0][column.name]" date-format="yyyy-MM-dd">
                                    <input type="text" class="form-control">
                                </datepicker>
                                <div ng-switch-when="dropdown">
                                    <ui-select ng-model="form.editorModel.rows[0][column.name]" theme="select2" ng-disabled="disabled">
                                        <ui-select-match placeholder="Select a value">
                                            <span ng-repeat="(key, value) in $select.selected">
                                                {{value | underscoreToSpace | toTitleCase}}
                                            </span>
                                        </ui-select-match>
                                        <ui-select-choices repeat="domainValue in form.editorModel.domainValues[column.name] | filter: $select.search" >
                                            <div ng-repeat="(key, value) in domainValue" ng-bind-html="value | underscoreToSpace | toTitleCase | highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>
                                </div>
                                <input ng-switch-when="number" ng-model="form.editorModel.rows[0][column.name]" type="number" class="form-control">
                                <input ng-switch-default ng-model="form.editorModel.rows[0][column.name]" type="text" class="form-control">
                            </td>
                         </tr>
                     </tbody>
                 </table>
            </div>
